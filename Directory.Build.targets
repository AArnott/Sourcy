<Project>
    <ItemGroup Condition="'$(MSBuildProjectName)' != 'Sourcy' AND '$(IsRoslynComponent)' == 'true'">

        <ProjectReference
            Include="$(MSBuildThisFileDirectory)\Sourcy\Sourcy.csproj" />

        <None
            Include="$(MSBuildProjectDirectory)\bin\$(Configuration)\netstandard2.0\$(MSBuildProjectName).dll"
            Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />

        <None
            Include="$(MSBuildThisFileDirectory)\Sourcy.Core\bin\$(Configuration)\netstandard2.0\Sourcy.Core.dll"
            Pack="true" PackagePath="analyzers/dotnet/cs" Visible="true" />
    </ItemGroup>

    <PropertyGroup Condition="'$(MSBuildProjectName)' != 'Sourcy' and '$(IsRoslynComponent)' == 'true'">
        <DevelopmentDependency>true</DevelopmentDependency>
    </PropertyGroup>
</Project>