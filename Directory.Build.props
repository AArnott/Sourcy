<Project>
  <ItemGroup
    Condition="'$(MSBuildProjectName)' != 'Sourcy' and '$(MSBuildProjectName)' != 'Sourcy.Core'">
    <AssemblyAttribute Include="Sourcy.EnableSourcyAttribute">
      <_Parameter1>$(MSBuildProjectFullPath)</_Parameter1>
    </AssemblyAttribute>

    <ProjectReference Include="$(MSBuildThisFileDirectory)\Sourcy.Core\Sourcy.Core.csproj"/>

    <None Include="$(MSBuildThisFileDirectory)\Sourcy\Sourcy.props">
      <Pack>true</Pack>
      <PackagePath>buildTransitive/$(TargetFramework)/$(MSBuildProjectName).props</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup Condition="'$(MSBuildProjectName)' != 'Sourcy' and '$(IsRoslynComponent)' == 'true'">
    <None Include="$(OutDir)\Sourcy.Core.dll"
      Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Polyfill">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <PropertyGroup Condition="'$(MSBuildProjectName)' != 'Sourcy.Core'">
    <DevelopmentDependency>true</DevelopmentDependency>
  </PropertyGroup>
  <PropertyGroup Condition="'$(DebugSourcy)' == 'true'">
    <DefineConstants>$(DefineConstants);DEBUG_SOURCY</DefineConstants>
  </PropertyGroup>
  <PropertyGroup>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>
  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="All" />
  </ItemGroup>
</Project>